                </tr>
            <% }) %> -->
            <!-- for -->
            <% for(let p of pros) { %>
                <tr>
                    <td><%= p.id %></td>
                    <td><%= p.name %></td>
                    <td><%= p.price %></td>
                    <td><img style="height: 100px;" src="images/<%=p.image%>" alt=""></td>
                    <td>
                        <a href="/edit/<%=p.id%>">Edit</a>
                        <a onclick="return confirm('Are you sure?')" href="/delete/<%=p.id%>">Delete</a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>