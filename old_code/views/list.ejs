    <title>Danh sach</title>
</head>
<body>
    <h1>Đây là trang danh sách</h1>
    <a href="/create">Thêm mới</a>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
